#!/usr/bin/env bash
# Bash script to configure localhost and facebook.com IP addresses

# Backup the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Update localhost IP address to 127.0.0.2
sudo sed -i '' 's/^127.0.0.1\s*localhost$/127.0.0.2 localhost/' /etc/hosts

# Update facebook.com IP address to 8.8.8.8
sudo sed -i '' 's/^.*facebook.com\s*$/8.8.8.8 facebook.com/' /etc/hosts

# Flush DNS cache (if possible)
if [ "$(uname)" == "Darwin" ]; then
    sudo dscacheutil -flushcache
fi
